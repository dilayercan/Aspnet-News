@model LoginViewModel

@{
    var returnUrl = Context.Request.Query["ReturnUrl"];
}

<section class="login py-5 border-top-1">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-lg-5 col-md-8 align-item-center">
                <div class="border">
                    <h3 class="bg-gray p-4">Login Now</h3>
                    <form asp-controller="Auth" asp-action="Login" method="post" asp-route-returnurl="@returnUrl">
                        <fieldset class="p-4">

                            <span class="text-danger" asp-validation-summary="ModelOnly"></span>


                            <input type="text" placeholder="Email Adress" class="border p-3 w-100 my-2" asp-for="EmailAdress">
                            <span class="text-danger" asp-validation-for="EmailAdress"></span>

                            <input type="password" placeholder="Password" class="border p-3 w-100 my-2" asp-for="Password">
                            <span class="text-danger" asp-validation-for="Password"></span>

                            <div class="loggedin-forgot">
                                <input type="checkbox" id="keep-me-logged-in" asp-for="RememberMe">
                                <label for="keep-me-logged-in" class="pt-3 pb-2">Keep me logged in</label>
                            </div>
                            <button type="submit" class="d-block py-3 px-5 bg-primary text-white border-0 rounded font-weight-bold mt-3">Log in</button>
                            <a class="mt-3 d-block  text-primary" asp-controller="Auth" asp-action="ForgotPassword">Forget Password?</a>
                            <a class="mt-3 d-inline-block text-primary" asp-controller="Auth" asp-action="Register">Register Now</a>
                        </fieldset>
                    </form>
                </div>
            </div>
        </div>
    </div>
</section>


@section Scripts{
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    }